    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth1" Grid.Column="0" Grid.Row="0" Height="85" Padding="10" Margin="10" Grid.ColumnSpan="2">
            <StackPanel Orientation="Vertical">
                <ComboBox x:Name="filter" Width="200" Height="40" Margin="-500,15,0,0" SelectionChanged="FilterSelectionChanged"
                          materialDesign:HintAssist.Hint="Filter"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                    <ComboBoxItem Content="Category"/>
                    <ComboBoxItem Content="Alcohol"/>
                </ComboBox>
                <ComboBox x:Name="type" Width="200" Height="40" Margin="277,-40,0,0" 
                          SelectionChanged="TypeSelectionChanged" 
                          IsEnabled="False"
                          materialDesign:HintAssist.Hint="Type"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
            </StackPanel>
        </materialDesign:Card>
        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth1" Grid.Column="0" Grid.Row="1" Height="280" Padding="10" Margin="10">
            <DataGrid Name="listCoctails" AutoGenerateColumns="False" SelectionChanged="ListCoctailsSelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Coctails" Binding="{Binding Path=NameDrink}"/>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth1" Grid.Column="1" Grid.Row="1" Height="280" Padding="10" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Grid.Row="0">
                    <TextBlock FontWeight="Bold">Name:</TextBlock>
                    <TextBlock FontWeight="Bold">Category:</TextBlock>
                    <TextBlock FontWeight="Bold">Alcohol:</TextBlock>
                    <TextBlock FontWeight="Bold">Ingredients:</TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <TextBlock Name="nameDrink" Text="{Binding Path=NameDrink}"/>
                    <TextBlock Name="categoryDrink" Text="{Binding Path=CategoryDrink}"/>
                    <TextBlock Name="alcoholDrink" Text="{Binding Path=AlcoholDrink}"/>
                    <TextBlock Name="ingredDrink" Text="{Binding Path=IngredientDrink}"/>
                </StackPanel>
                <Button Name="order" Grid.Column="1" Grid.Row="1" Content="Order" Width="150" Height="40" Click="OrderDrink"/>
            </Grid>

        </materialDesign:Card>

    </Grid>
</Window>
